@page
@model Abby_Web.Pages.Categories.DeleteModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="pb-3">
            <h2 class="text-primary pt-3">Delete Category</h2>
            <hr/>
        </div>
        <input hidden asp-for="Category.Id" />
        @*Name field*@
        <div class="mb-3">
            <label asp-for="Category.Name"  ></label>
            <input asp-for="Category.Name" class="form-control" disabled="disabled"/>
        </div>
        @*Display Order Field*@
        <div class="mb-3">
           <label asp-for="Category.DisplayOrder"  ></label>
            <input asp-for="Category.DisplayOrder" class="form-control" disabled="disabled"/>
        </div>
        @*Buttons*@
        <button type="submit" class="btn btn-danger" style="width:150px;">Delete</button>
        <a asp-page="Index" class="btn btn-secondary" style="width:150px;">Back to List</a>
    </div>
</form>

@section Scripts{
    @{
       <partial name="_ValidationScriptsPartial"></partial>
    }
}